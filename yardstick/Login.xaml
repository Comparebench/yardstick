<Window x:Class="yardstick.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:yardstick"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"
        mc:Ignorable="d"
        Title="Comparebench Login" Height="300" Width="400">
        
        
        <StackPanel Margin="0,111,0,0" >
            <StackPanel.Resources>
                <system:Double x:Key="IconSize">24</system:Double>
                <system:Double x:Key="ButtonWidth">100</system:Double>
            </StackPanel.Resources>
        <Button Click="DiscordLogin"
                        Style="{StaticResource MaterialDesignFloatingActionLightButton}">
            <materialDesign:PackIcon
                        Kind="Discord"
                        Height="{StaticResource IconSize}"
                        Width="{StaticResource IconSize}" />
        </Button>
    </StackPanel>
</Window>
