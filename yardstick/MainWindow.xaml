        <!--         AutoGenerateColumns="False" -->
        <!--         CanUserAddRows="False" -->
        <!--         IsReadOnly="True" -->
        <!--         CanUserDeleteRows="False" -->
        <!--         Name="ProfileGrid" -->
        <!--         ItemsSource="{Binding }"> -->
        <!--         <DataGrid.Columns> -->
        <!--             <DataGridTextColumn Header="Name" Binding="{Binding Profile.Name}" /> -->
        <!--             <DataGridTextColumn Header="Build" Binding="{Binding Profile.CPUModel.Name}" /> -->
        <!--             <DataGridTextColumn Header="Build" Binding="{Binding Profile.MotherboardModel.Name}" /> -->
        <!--             <DataGridTextColumn Header="Build" Binding="{Binding Profile.GPUModels[0].Name}" /> -->
        <!--         </DataGrid.Columns> -->
        <!--     </DataGrid> -->
        <!-- </Grid> -->

    </StackPanel>

</Window>