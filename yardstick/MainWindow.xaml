<Window x:Class="yardstick.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:yardstick"
        mc:Ignorable="d"

        Title="Comparebench Yardstick" Height="300" Width="400">
    <StackPanel>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="About" Click="mnuNew_Click" />
            </Menu>
            <Menu DockPanel.Dock="Top">
                <TextBlock Text="{Binding Source={x:Static local:Account.Name}}" />
            </Menu>
        </DockPanel>
        <Grid x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!-- CPU -->
            <Grid Grid.Row="0" Grid.Column="0" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock TextWrapping="Wrap" Text="CPU Model: " Grid.Column="0" />
                <TextBlock TextWrapping="Wrap"
                           Text="{Binding Profile.CPUModel.Name,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"
                           Grid.Column="1"
                           TextAlignment="Right" />
            </Grid>

            <!-- Mobo -->
            <Grid Grid.Row="1" Grid.Column="0" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock TextWrapping="Wrap" Text="Mobo Model: "
                           Grid.RowSpan="2" />
                <TextBlock TextWrapping="Wrap"
                           Text="{Binding Profile.MotherboardModel.Name,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"
                           Grid.Column="1"
                           TextAlignment="Right" />
            </Grid>

            <!-- GPU -->
            <Grid Grid.Row="2" Grid.Column="0" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock TextWrapping="Wrap" Text="GPU Model: "
                           Grid.RowSpan="2" />
                <TextBlock TextWrapping="Wrap"
                           Text="{Binding Profile.GPUModels[0].Name,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"
                           Grid.Column="1"
                           TextAlignment="Right" />
            </Grid>

            <!-- CB Score -->
            <Grid Grid.Row="3" Grid.Column="0" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock TextWrapping="Wrap" Text="Cinebench Score: "
                           Grid.RowSpan="2" />
                <TextBlock TextWrapping="Wrap"
                           Text="{Binding CbScore,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"
                           Grid.Column="1"
                           TextAlignment="Right" />
            </Grid>

            <!-- Select CB Location -->
            <Grid Grid.Row="4" Grid.Column="0" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button Width="177" Height="25" HorizontalAlignment="Left"
                        Click="SelectCinebenchLocation">
                    Select Cinebench R20 Location
                </Button>
            </Grid>

            <!-- Upload -->
            <Grid Grid.Row="5" Grid.Column="0" Margin="5">
                <TextBox x:Name="BuildName" Width="150" HorizontalAlignment="Left" />
            </Grid>
            <Grid Grid.Row="6" Grid.Column="0">
                <Button Grid.Column="0" Width="177" Height="25" HorizontalAlignment="Left"
                        Click="UploadResult">
                    Upload Result
                </Button>
                <!-- <Button Margin="10,160,0,229" Width="177" Height="25" HorizontalAlignment="Left" Click="TestConnection">Test Connection</Button> -->
            </Grid>

            <!-- <Grid Grid.Row="7" Grid.Column="0"> -->
