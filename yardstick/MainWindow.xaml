<Window x:Class="yardstick.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:yardstick"
        mc:Ignorable="d"

        Title="Comparebench Yardstick" Height="300" Width="400">
    <StackPanel>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="About" Click="mnuNew_Click" />
            </Menu>
            <Menu DockPanel.Dock="Top">
                <TextBlock Text="{Binding Source={x:Static local:Account.Name}}" />
            </Menu>
        </DockPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <!-- CPU -->
            <TextBlock TextWrapping="Wrap" Text="CPU Model: " Grid.ColumnSpan="2" Margin="0,0,200,250" Grid.RowSpan="2" />
            <TextBlock TextWrapping="Wrap"
                       Text="{Binding Profile.CPUModel.Name,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"
                       Grid.ColumnSpan="2" Margin="100,0,0,250" Grid.RowSpan="2" />
            
            <!-- Mobo -->
            <TextBlock TextWrapping="Wrap" Text="Mobo Model: " Grid.ColumnSpan="2" Margin="0,15,200,250" Grid.RowSpan="2" />
            <TextBlock TextWrapping="Wrap"
                       Text="{Binding Profile.MotherboardModel.Name,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"
                       Grid.ColumnSpan="2" Margin="100,15,0,250" Grid.RowSpan="2" />

            <!-- GPU -->
            <TextBlock TextWrapping="Wrap" Text="GPU Model: " Grid.ColumnSpan="2" Margin="0,30,200,250" Grid.RowSpan="2" />
            <TextBlock TextWrapping="Wrap"
                       Text="{Binding Profile.GPUModels[0].Name,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"
                       Grid.ColumnSpan="2" Margin="100,30,0,250" Grid.RowSpan="2" />

            <!-- CB Score -->
            <TextBlock TextWrapping="Wrap" Text="Cinebench Score: " Grid.ColumnSpan="2" Margin="0,45,200,250"
                       Grid.RowSpan="2" />
            <TextBlock TextWrapping="Wrap"
                       Text="{Binding CbScore,RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=Window}}"
                       Grid.ColumnSpan="2" Margin="100,45,0,250" Grid.RowSpan="2" />
            
            <!-- Upload -->
            <Button Margin="10,39,0,229" Width="177" Height="25" HorizontalAlignment="Left"
                    Click="SelectCinebenchLocation">
                Select Cinebench R20 Location
            </Button>
            <TextBox x:Name="BuildName"/>
            <Button Margin="10,80,0,229" Width="177" Height="25" HorizontalAlignment="Left" Click="UploadResult">Upload Result</Button>
            <!-- <Button Margin="10,160,0,229" Width="177" Height="25" HorizontalAlignment="Left" Click="TestConnection">Test Connection</Button> -->
        </Grid>
        <Grid>
            <DataGrid
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                IsReadOnly="True"
                CanUserDeleteRows="False"
                Name="ProfileGrid"
                ItemsSource="{Binding}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="CPU Model" Binding="{Binding CPUModel}" />

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </StackPanel>

</Window>