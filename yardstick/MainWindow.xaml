<Window x:Class="yardstick.MainWindow"

        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:yardstick"
        xmlns:viewModels="clr-namespace:yardstick.ViewModels"
        mc:Ignorable="d"

        Title="Comparebench Yardstick" Height="400" Width="400" Loaded="Page_Loaded">

    <Window.DataContext>
        <viewModels:BuildViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="ModelType"
               TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style x:Key="HardwareName"
               TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Resources>

    <StackPanel>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="About" Click="mnuNew_Click" />
            </Menu>
            <Menu DockPanel.Dock="Top">
                <TextBlock Text="{Binding Source={x:Static local:Account.Name}}" />
            </Menu>
        </DockPanel>

        <!-- CPU -->
        <ItemsControl
            ItemsSource="{Binding CpuModels}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <WrapPanel>
                            <TextBlock Style="{StaticResource ModelType}"
                                       Text="CPU Model: " />
                            <TextBlock Style="{StaticResource HardwareName}"
                                       Text="{Binding Path=Name}" />
                        </WrapPanel>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- GPU -->
        <ItemsControl
            ItemsSource="{Binding GpuModels}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <WrapPanel>
                            <TextBlock Style="{StaticResource ModelType}"
                                       Text="GPU Model: " />
                            <TextBlock Style="{StaticResource HardwareName}"
                                       Text="{Binding Path=Name}" />
                        </WrapPanel>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Motherboard -->
        <Grid>
            <WrapPanel>
                <TextBlock Style="{StaticResource ModelType}"
                           Text="Mobo Model: " />
                <TextBlock Style="{StaticResource HardwareName}"
                           Text="{Binding MotherboardModel.Name}" />
            </WrapPanel>
        </Grid>

        <!-- RAM -->
        <Grid>
            <WrapPanel>
                <TextBlock Style="{StaticResource ModelType}"
                           Text="RAM Model: " />
                <TextBlock Style="{StaticResource HardwareName}">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{}{0}, {1:0}GB">
                            <Binding Path="RamModel.Name" />
                            <Binding Path="GetRamValue" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </WrapPanel>
        </Grid>

        <!-- CineBench Score -->
        <Grid>
            <WrapPanel>
                <TextBlock Style="{StaticResource ModelType}"
                           Text="CB Score: " />
                <TextBlock Style="{StaticResource HardwareName}"
                           Text="{Binding CbScore}" />
            </WrapPanel>
        </Grid>

        <!-- Select CB Location -->
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Width="177" Height="25" HorizontalAlignment="Left"
                    Click="SelectCinebenchLocation">
                Select Cinebench R20 Location
            </Button>
        </Grid>

        <!-- Upload -->
        <Grid Margin="5">
            <TextBox x:Name="BuildName" Width="150" HorizontalAlignment="Left"
                     Text="{Binding Path=Profile.Name, Mode=TwoWay}" />
        </Grid>
        <Grid>
            <Button Grid.Column="0" Width="177" Height="25" HorizontalAlignment="Left"
                    Click="UploadResult">
                Upload Result
            </Button>
            <!-- <Button Margin="10,160,0,229" Width="177" Height="25" HorizontalAlignment="Left" Click="TestConnection">Test Connection</Button> -->
        </Grid>

        <!-- <Grid Grid.Row="7" Grid.Column="0"> -->
